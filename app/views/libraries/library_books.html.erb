<h4><a href="/books">Book Index</a></h4>
<h4><a href="/libraries">Library Index</a></h4>
<h4><a href="/libraries/<%= "#{@library.id}"%>/books/new">Create Book</a></h4>
<h4><%= link_to "Sort Books Alphabetically", "/libraries/#{@library.id}/books?alpha=true"%></h4>
<h4>
  <%= form_with url: "/libraries/#{@library.id}/books", method: :post, local: true do %>
    <%= text_field_tag(:minimum_page_count) %>
    <%= submit_tag 'Only return records with more than this number of pages' %>
  <% end %>
<h1><%= @library.name %></h1>

<% @library_books.each do |book| %>
<h3><%= book.name %> 
  <a href="/books/<%= book.id %>/edit"> Update <%= book.name %></a>
  <%= link_to "Delete #{book.name}", "/books/#{book.id}", :method => :delete %></h3>
<p>Library ID: <%= book.library_id %></p>
<p>Checked Out? <%= book.checked_out %></p>
<p>Number of Pages: <%= book.pages %></p>
<p>Created At: <%= book.created_at %></p>
<p>Updated At: <%= book.updated_at %></p><br/>
<% end %>